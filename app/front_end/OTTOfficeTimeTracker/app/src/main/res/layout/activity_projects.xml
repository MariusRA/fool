<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProjectsActivity">

    <TableLayout
        android:id="@+id/tlProjects"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp">

        <TableRow>

            <TextView
                android:id="@+id/etPID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="#d0d0d0"
                android:gravity="center"
                android:text="@string/etPID"></TextView>

            <TextView
                android:id="@+id/etPName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="#d0d0d0"
                android:gravity="center"
                android:text="@string/etPName"></TextView>

            <TextView
                android:id="@+id/etPDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#d0d0d0"
                android:gravity="center"
                android:text="@string/etPDescription"></TextView>
        </TableRow>
    </TableLayout>

</androidx.appcompat.widget.LinearLayoutCompat>